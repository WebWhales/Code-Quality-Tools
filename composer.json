{
  "name": "webwhales/code-quality-tools",
  "description": "Code quality tools for Web Whales projects",
  "authors": [
    {
      "name": "redelschaap",
      "email": "ronald.edelschaap@webwhales.nl"
    }
  ],
  "require": {
    "php": ">=8.0.2",
    "barryvdh/laravel-ide-helper": "*",
    "larastan/larastan": "*",
    "phpstan/extension-installer": "*",
    "phpstan/phpstan-phpunit": "*",
    "spaze/phpstan-disallowed-calls": "*",
    "laravel/pint": "*"
  },
  "autoload": {
    "psr-4": {
      "WebWhales\\CodeQualityTools\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPStan\\": "phpstan/src/",
      "WebWhales\\CodeQualityTools\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/phpstan/phpstan-src"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "symfony/var-dumper": "^7.2"
  }
}
